  print qq{
<h1>OpenGuides Release Notes</h1>
<p>
The following table shows the major changes for all releases of the <a 
href="/page/software">OpenGuides software</a>. For full details, please consult the <a
href="http://search.cpan.org/dist/OpenGuides/Changes">latest Changes file</a>. Versions
with "recommended upgrade" have important improvements that you would be advised 
to upgrade your installation to as soon as possible.
</p>
<table id="release_notes" style="width: 75%"  cellpadding="0" cellspacing="0">
  <tr>
    <td colspan="3" style="text-align: center; font-weight: bold">Latest
Version</td>
  </tr>
  };
  
  my $grey  = 1;
  my $count = 0;
  
  foreach (reverse sort keys %versions)
  {
    print qq{  <tr>\n    <th scope="row" class="};
    
    if ($count == 0) { print "version_latest"; }
    else             { print "version";        }
      
    print qq{"><a name="$_">$_</a></th>\n};
    
    if ($count == 0 && $grey == 1)
    {
      print qq{    <td class="version_details_grey_latest">};
    }
    elsif ($grey == 1)
    {
      print qq{    <td class="version_details_grey" colspan="2">};
    }
    else
    {
      print qq{    <td class="version_details" colspan="2">};
    }  

    print "$versions{$_}</td>\n";
    
    if ($count == 0)
    {
      print qq{    <td class="release_links">
<a href="http://search.cpan.org/CPAN/authors/id/D/DO/DOM/OpenGuides-$_.tar.gz">download</a>,
<a href="http://search.cpan.org/dist/OpenGuides-$_">view</a>,
<a href="http://search.cpan.org/src/DOM/OpenGuides-$_/">browse</a></td>\n};
    }

    print "  </tr>\n";
    
    $count++;
    
    if ($grey == 1) { $grey = 0; }
    else            { $grey = 1; }
  }
</table>

[% END %]